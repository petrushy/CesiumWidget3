{
  "name": "CesiumWidget3",
  "version": "0.1.0",
  "description": "A Custom Jupyter Widget Library",
  "author": "Petrus Hyv√∂nen",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/petrushy/CesiumWidget3.git"
  },
  "keywords": [
    "jupyter",
    "widgets",
    "ipython",
    "ipywidgets",
    "jupyterlab-extension",
    "cesium"
  ],
  "files": [
    "lib/**/*.js",
    "dist/*.js"
  ],
  "scripts": {
    "clean": "rimraf dist/ && rimraf ../cesiumwidget3/labextension/ && rimraf ../cesiumwidget3/nbextension",
    "prepublish": "yarn run clean && yarn run build:prod",
    "build": "webpack --mode=development && yarn run build:labextension:dev",
    "build:prod": "webpack --mode=production && yarn run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "watch": "webpack --watch --mode=development",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/helper-compilation-targets": "^7.12.17",
    "@jupyterlab/builder": "^3.0.3",
    "c137.js": "^1",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.2",
    "html-webpack-plugin": "^5.2.0",
    "json-loader": "^0.5.4",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "webpack": "^5",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@jupyter-widgets/base": "^1.1 || ^2 || ^3 || ^4",
    "c137.js": "^1",
    "lodash": "^4.17.4"
  },
  "jupyterlab": {
    "extension": "lib/labplugin",
    "outputDir": "../cesiumwidget3/labextension",
    "sharedPackages": {
      "@jupyter-widgets/base": {
        "bundled": false,
        "singleton": true
      }
    }
  }
}
